<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <meta http-equiv="content-language" content="vi" />
    <meta name="Title" content="@ViewBag.Title">
    <meta name="keywords" content="nivan" />
    <link rel="icon" href="~/img/images/logo.png" type="image/x-icon" />
    <meta name="description" content="Các sản phẩm của NIVAN đều được sản xuất bởi quy trình và công nghệ hiện đại cùng đội ngũ chuyên gia nghiên cứu giàu kinh nghiệm, chuyên sản xuất các dòng mỹ phẩm cao cấp. Ngoài ra, trước khi được phân phối rộng rãi ra thị trường, các sản phẩm của NIVAN đều phải trải qua những quy trình kiểm duyệt chất lượng khắt khe." />
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")


</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-custom fixed-top bg-dark">
            <a href="@Url.Action("Index","Home")"><img src="~/img/images/@logo.CONTENTS" style="max-width:150px" /></a>
            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarCollapse"
                    aria-controls="navbarCollapse"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index","Home")">
                            Trang chủ <span class="sr-only"> (current) </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Home")#product"> Sản phẩm </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Home")#intro"> Giới thiệu </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Cart")"> Giỏ hàng </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main class="container-fluid body-content product-container" role="main">
        @RenderBody()
    </main>
    <footer>
        <div class="container-fluid" id="footer-info">
            <div class="row">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <ul>
                                <li>
                                    <a>
                                        <i class="fas fa-building"></i> Cửa hàng mỹ phẩm online
                                        Nivan
                                    </a>
                                </li>
                                <li>
                                    <a>
                                        <i class="fas fa-map-marker-alt"></i> 259 Nguyễn Văn
                                        Luông Phường 11 Quận 6
                                    </a>
                                </li>
                                <li>
                                    <a><i class="fas fa-phone-square"></i> (028) 354072915</a>
                                </li>
                                <li>
                                    <a><i class="fas fa-phone-square"></i> 0913 878 180</a>
                                </li>
                                <li>
                                    <a>
                                        <i class="fas fa-envelope"></i>
                                        khoa.pham2502@gmail.com
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-4 social-network">
                            <ul>
                                <li>
                                    <a href="#"><i class="fab fa-facebook"></i> Facebook</a>
                                </li>
                                <li>
                                    <a href="#"><i class="fab fa-instagram"></i> Instagram</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid" id="copyright">
            <div class="row">
                <div class="container text-center">Copyright &copy; Nivanshop</div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

