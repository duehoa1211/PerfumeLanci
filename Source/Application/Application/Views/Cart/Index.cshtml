@model CART
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-12">
        <table class="table table-responsive table-hover">
            <thead>
                <tr class="thead-light">
                    <th>Tên</th>
                    <th>Số lượng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartDetail)
                {
                    <tr>
                        <td>@item.Product.TITLE</td>
                        <td>@item.QUANTITY</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>