@model CART
@{
    ViewBag.Title = "Thanh toán - Nivan";
    Layout = "~/Views/Shared/_LayoutProduct.cshtml";
}

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Checkout", "Cart", FormMethod.Post))
        {
            @Html.AntiForgeryToken();
            <div class="form-group row">
                @Html.LabelFor(z => z.CUSTOMER, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(z => z.CUSTOMER, new { @class = "form-control" })
                    @Html.ValidationMessageFor(z => z.CUSTOMER, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(z => z.PHONENUMBER, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(z => z.PHONENUMBER, new { @class = "form-control", type = "tel" })
                    @Html.ValidationMessageFor(z => z.PHONENUMBER, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(z => z.EMAIL, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(z => z.EMAIL, new { @class = "form-control", type = "email" })
                    @Html.ValidationMessageFor(z => z.EMAIL, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(z => z.INFOS, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(z => z.INFOS, new { @class = "form-control" })
                    @Html.ValidationMessageFor(z => z.INFOS, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(z => z.ADDRESS, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(z => z.ADDRESS, new { @class = "form-control" })
                    @Html.ValidationMessageFor(z => z.ADDRESS, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <h5>Danh sách sản phẩm trong giỏ hàng</h5>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <td>Tên sản phẩm</td>
                            <td>Số lượng</td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.CartDetail.Any())
                        {
                            foreach (var item in Model.CartDetail)
                            {
                                <tr>
                                    <td>@item.Product.TITLE</td>
                                    <td>@item.QUANTITY</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <button type="submit" class="btn btn-primary">Đặt hảng</button>
            <a href="@Url.Action("Index","Home")" class="btn btn-secondary">Tiếp tục mua hàng</a>
        }
        <a href="@Url.Action("Index","Cart")" class="btn btn-default">Trở lại giỏ hàng</a>
    </div>
</div>
