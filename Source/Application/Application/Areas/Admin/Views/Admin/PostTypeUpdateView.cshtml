@model Application.Models.POST_TYPE

@{
    ViewBag.Title = "PostTypeUpdateView";
}
<div class="card">
    <div class="card-header">
        <i class="fas fa-plus"></i>Cập nhật nhóm hàng
    </div>
    <div class="card-body mb-3">
        @using (Html.BeginForm("PostTypeUpdate", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(z=>z.ID)
            <div class="form-group row">
                @Html.LabelFor(z => z.NAME_TYPE, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(z => z.NAME_TYPE, new { @class = "form-control" })
                    @Html.ValidationMessageFor(z => z.NAME_TYPE, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(z => z.DESCRIP, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(z => z.DESCRIP, new { @class = "form-control" })
                    @Html.ValidationMessageFor(z => z.DESCRIP, "", new { @class = "text-danger" })
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        }
    </div>
</div>