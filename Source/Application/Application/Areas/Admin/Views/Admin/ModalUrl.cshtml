@model URL
<div class="modal fade" id="update" tabindex="-1" role="dialog" aria-labelledby="deletCate" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLongTitle">Update group</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("UrlUpdate", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <h5>Bạn có chắc rằng muốn cập nhật url của <span class="postName"></span> thành
                    <span class="PostDes"></span></h5>
                    @Html.HiddenFor(z => z.ID, new { @class = "PostID" });
                    @Html.HiddenFor(z => z.DESCRIP, new { @class = "PostDes" });
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger float-right">Yes</button>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>


