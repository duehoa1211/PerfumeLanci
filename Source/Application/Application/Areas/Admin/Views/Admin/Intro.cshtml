@model OPTIONAL
@{
    ViewBag.Title = "Optional";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        Bài giới thiệu
    </div>
    <div class="card-body">
        @using (Html.BeginForm("IntroUpdate", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(z => z.ID)
            <div class="form-group">
                @Html.Label(Model.NAME,"Bài giới thiệu", new { @class = "col-form-label" })
                @Html.TextAreaFor(z => z.CONTENTS, new { @class = "form-control" })
                @Html.ValidationMessageFor(z => z.CONTENTS, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-default">Cập nhật</button>
        }
    </div>
    <div class="card-footer">
        @Html.ActionLink("Trở về trang chủ", "Index")
    </div>
</div>

@section scripts{
    <script>
        CKEDITOR.replace('CONTENTS');
        CKFinder.setupCKEditor(null, '/ckfinder');

    </script>
}