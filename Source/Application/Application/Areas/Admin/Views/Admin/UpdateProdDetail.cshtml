@model CART_DETAIL
@{
    ViewBag.Title = "UpdateProdDetail";
}

<div class="card">
    <div class="card-header">
        Sửa sản phẩm đơn hàng @Model.BILL_ID
    </div>
    <div class="card-body">
        @using (Html.BeginForm("UpdateProdDet", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(z => z.BILL_ID)
            @Html.Hidden("prodID", Model.PRODUCT_ID)
            <div class="form-group row">
                @Html.LabelFor(z => z.PRODUCT_ID, new { @class = "col-sm-2 col-label-form" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(z => z.PRODUCT_ID, Model.ProductList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(z => z.PRODUCT_ID, "", new { @class = "invalid-feedback" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(z => z.QUANTITY, new { @class = "col-sm-2 col-label-form" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(z => z.QUANTITY, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(z => z.QUANTITY, "", new { @class = "invalid-feedback" })
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        }
    </div>
</div>